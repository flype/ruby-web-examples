<div class="row form">
  <div class="col-lg-6">
    <form role="form" action=<%= todos_path %> method="POST">
      <div class="form-group">
        <input type="text" class="form-control" id="todo_text" name="todo[text]" placeholder="What?">
      </div>
      <button type="submit" class="btn btn-default">Add</button>
    </form>
  </div>
</div>

<div class="row list">
  <div class="col-lg-12">
    <ul>
      <% for todo in todos %>
      <li>
        <div class="todo">
          <div class="<%= todo.caption_classes %>"><%= todo.text %></div>
          <% if todo.pending? %>
          <form method="POST" action="<%= todo_done_path(todo) %>">
            <input type="hidden" name="_method" value="PUT">
            <button type="submit" class="btn btn-success">Done</button>
          </form>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
